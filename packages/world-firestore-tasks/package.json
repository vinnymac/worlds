  "devDependencies": {
    "@testcontainers/gcloud": "11.8.1",
    "@types/node": "catalog:",
    "@workflow/world-testing": "catalog:",
    "axios": "1.13.2",
    "testcontainers": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "workflow",
    "gcp",
    "firestore",
    "cloud-tasks",
    "serverless",
    "durable-functions",
    "real-time"
  ],
  "author": "vinnymac",
  "packageManager": "pnpm@10.23.0",
  "volta": {
    "extends": "../../package.json"
  }
