{
  "name": "@fantasticfour/world-postgres-redis",
  "version": "1.0.2",
  "description": "Hybrid World implementation using PostgreSQL for durable storage with Redis Lists for queue management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "world-postgres-redis-setup": "./bin/setup.js"
  },
  "files": [
    "dist",
    "bin",
    "src/drizzle/migrations"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vinnymac/worlds.git",
    "directory": "packages/world-postgres-redis"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./drizzle/schema": {
      "types": "./dist/drizzle/schema.d.ts",
      "default": "./dist/drizzle/schema.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    },
    "./drizzle/migrations/*.sql": "./src/drizzle/migrations/*.sql"
  },
  "scripts": {
    "build": "tsc && chmod +x bin/setup.js",
    "dev": "tsc --watch",
    "clean": "tsc --build --clean && rm -rf dist",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "db:push": "node dist/cli.js"
  },
  "dependencies": {
    "@vercel/queue": "catalog:",
    "@workflow/errors": "catalog:",
    "@workflow/world": "catalog:",
    "@workflow/world-local": "catalog:",
    "cbor-x": "catalog:",
    "drizzle-orm": "catalog:",
    "ioredis": "catalog:",
    "postgres": "catalog:",
    "ulid": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "catalog:",
    "@testcontainers/redis": "catalog:",
    "@types/node": "catalog:",
    "@workflow/world-testing": "catalog:",
    "dotenv": "catalog:",
    "drizzle-kit": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "workflow",
    "postgres",
    "postgresql",
    "redis",
    "durable-functions"
  ],
  "author": "",
  "packageManager": "pnpm@10.23.0",
  "volta": {
    "extends": "../../package.json"
  }
}
