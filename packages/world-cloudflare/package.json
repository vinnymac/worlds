{
  "name": "@fantasticfour/world-cloudflare",
  "version": "1.0.2",
  "description": "Cloudflare Durable Objects World implementation with edge-native SQLite storage and global <10ms latency",
  "type": "module",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vinnymac/worlds.git",
    "directory": "packages/world-cloudflare"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "clean": "tsc --build --clean && rm -rf dist",
    "test": "vitest run",
    "test:workers": "vitest run --config vitest.workers.config.ts",
    "test:all": "pnpm test && pnpm test:workers",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@workflow/errors": "catalog:",
    "@workflow/world": "catalog:",
    "@workflow/world-local": "catalog:",
    "ulid": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.10.10",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "catalog:",
    "@workflow/world-testing": "catalog:",
    "miniflare": "^3.20241106.2",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "wrangler": "^3.91.0"
  },
  "keywords": [
    "workflow",
    "cloudflare",
    "durable-objects",
    "edge",
    "serverless",
    "durable-functions"
  ],
  "author": "vinnymac",
  "packageManager": "pnpm@10.23.0",
  "volta": {
    "extends": "../../package.json"
  }
}
